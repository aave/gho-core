{
  "name": "@aave/gho",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "hardhat": "hardhat",
    "clean": "hardhat clean",
    "ci:clean": "rm -rf ./artifacts ./cache ./types ./temp-artifacts",
    "ci:test": "npm run test && npm run test-unit",
    "compile": "rm -rf ./artifacts ./cache ./types && SKIP_LOAD=true hardhat compile",
    "deploy-v3": ". ./setup-test-env.sh && NETWORK=goerli hardhat deploy-v3",
    "deploy-v3-goerli": ". ./setup-test-env.sh && NETWORK=goerli hardhat deploy-v3 --network goerli",
    "test": "rm -rf artifacts && hardhat test ./src/test/*.ts",
    "test:stkAave": "hardhat test ./src/test/__setup.test.ts ./src/test/stkAave-upgrade.test.ts",
    "test-all": ". ./setup-test-env.sh && NETWORK=goerli DEPLOYING=true hardhat test ./src/test/*.ts ./src/test/**/*.ts",
    "test-all-goerli-deploy": ". ./setup-test-env.sh && NETWORK=goerli DEPLOYING=true hardhat test ./src/test/*.ts ./src/test/**/*.ts",
    "test-all-goerli-market": ". ./setup-test-env.sh && NETWORK=goerli DEPLOYING=false hardhat test ./src/test/*.ts ./src/test/**/*.ts",
    "test-unit": "rm -rf artifacts && hardhat test ./src/test/unitTests/*.ts",
    "ftest": "forge test --contracts src/contracts --lib-paths node_modules",
    "coverage": ". ./setup-test-env.sh && NETWORK=goerli DEPLOYING=true hardhat coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.25",
    "bluebird": "^3.7.2",
    "chai": "^4.3.6",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.3",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.22",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@aave/aave-token": "^1.0.4",
    "@aave/core-v3": "^1.17.1",
    "@aave/deploy-v3": "^1.55.2",
    "@aave/periphery-v3": "^2.0.0",
    "@aave/safety-module": "^1.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@rari-capital/solmate": "^6.2.0",
    "dotenv": "^16.0.0",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-tracer": "^1.2.1"
  },
  "overrides": {
    "@nomicfoundation/hardhat-toolbox": {
      "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers"
    }
  }
}
