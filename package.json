{
  "name": "@aave/gho",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "postinstall": "git submodule update --init --recursive",
    "hardhat": "hardhat",
    "clean": "hardhat clean",
    "deploy-v3": ". ./setup-test-env.sh && hardhat deploy-v3",
    "test": "rm -rf artifacts && hardhat test ./src/test/*.ts",
    "test:stkAave": "hardhat test ./src/test/__setup.test.ts ./src/test/stkAave-upgrade.test.ts",
    "test-all": ". ./setup-test-env.sh && hardhat test ./src/test/*.ts ./src/test/**/*.ts",
    "test-unit": "rm -rf artifacts && hardhat test ./src/test/unitTests/*.ts",
    "ftest": "forge test --contracts src/contracts --lib-paths node_modules", 
    "compile": "rm -rf ./artifacts ./cache ./types && SKIP_LOAD=true hardhat compile",
    "ci:clean": "rm -rf ./artifacts ./cache ./types ./temp-artifacts",
    "ci:test": "npm run test && npm run test-unit"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.11",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.25",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.3",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.4",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@aave/aave-token": "^1.0.4",
    "@aave/core-v3": "^1.16.2",
    "@aave/deploy-v3": "1.27.0",
    "@aave/periphery-v3": "1.18.0",
    "@aave/safety-module": "github:aave/aave-stake-v2#b9e40fb1c14df7e3874e4def53860d0f53c1d958",
    "@openzeppelin/contracts": "^4.5.0",
    "@rari-capital/solmate": "^6.2.0",
    "dotenv": "^16.0.0",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.8"
  }
}
